<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        tools:context=".view.location.MainFragment">

        <ImageView
            android:id="@+id/iv_prayer_day_time"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.47" />


        <TextView
            android:id="@+id/tv_prayer_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="56dp"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_prayer_names"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_prayer_names"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_prayer_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:text="Fajr"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_prayer_day_time"
            app:layout_constraintStart_toEndOf="@+id/iv_prayer_day_time"
            app:layout_constraintTop_toTopOf="@+id/iv_prayer_day_time"
            app:layout_constraintVertical_bias="0.3" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>